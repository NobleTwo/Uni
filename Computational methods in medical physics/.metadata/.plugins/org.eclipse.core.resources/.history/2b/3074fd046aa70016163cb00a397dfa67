#include <iostream>
#include <random>
#include <ctime>
#include <cmath>

double samplingMethod(int numberOfSamples){
	int a=0;
	int b=1;
	double sum_f_x = 0;
	for(int i=0; i<numberOfSamples; i++){
		double x = rand();
		sum_f_x += pow(cos(1./x),2);
	}
	return (b-a)*sum_f_x/numberOfSamples;
}

double hitOrMiss(int numberOfSamples){
	int a=0;
	int b=1;
	double max = 1;
	double I_known = (b-a)*max;
	int hit = 0;
	for(int i=0; i<numberOfSamples; i++){
		double x = rand();
		double y = rand();
		double f_x += pow(cos(1./x),2);
		if(y<= f_x){
			hit++;
		}
	}
	return I_known*hit/numberOfSamples;
}

int main(){
	srand(time(NULL));
	std::cout << "Test";
	ostream file("values.txt");
	for(int i=0; i<4; i++){
		double samplingMethod = samplingMethod(pow(10,i));
		double hitOrMiss = hitOrMiss(pow(10,i));
		file << i << "\t" <<
	}
}
